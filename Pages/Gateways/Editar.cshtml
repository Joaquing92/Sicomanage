@page
@model SICPERU.Pages.Gateways.EditarModel
@{
}

<br>
<h2>Editar Chip</h2>

@if (!string.IsNullOrEmpty(Model.errorMessage))
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST" id="editarForm">
    <input type="hidden" name="id_chip" value="@Model.gatewayinfo.id_chip">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Número</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="numero_chip" value="@Model.gatewayinfo.numero_chip">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Gateway</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="nombre_gateway" value="@Model.gatewayinfo.nombre_gateway">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Ubicación</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="ubicacion_gateway" value="@Model.gatewayinfo.ubicacion_gateway">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Fecha de colocación</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="fecha_colocacion" value="@Model.gatewayinfo.fecha_colocacion">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Fecha de extracción</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="fecha_extraccion" value="@Model.gatewayinfo.fecha_extraccion">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Número nuevo</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="numero_nuevo" value="@Model.gatewayinfo.numero_nuevo">
        </div>
    </div>

    <div class ="row mb-3">
		<label class="col-sm-3 col-form-label">Estado</label>
		<div class ="col-sm-6">
			<input type="text" class="form-control" name="estado" value="@Model.gatewayinfo.estado">
		</div>
	</div>


    @if (!string.IsNullOrEmpty(Model.successMessage))
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="button" class="btn btn-primary" onclick="confirmarEdicion()">Guardar</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Gateways" role="button">Cancelar</a>
        </div>
    </div>
</form>

<script>
    function confirmarEdicion() {
        if (confirm('¿Estás seguro de editar el chip?')) {
            document.getElementById("editarForm").submit();
        }
    }
</script>