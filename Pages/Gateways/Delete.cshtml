@page
@model SICPERU.Pages.Gateways.DeleteModel

<style>
    /* Estilos para el popup */
    .popup {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #ffffff;
        border: 1px solid #cccccc;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        z-index: 9999;
    }

    .popup h2 {
        margin-top: 0;
    }

    .popup-buttons {
        margin-top: 20px;
        text-align: center;
    }

    .success-message {
        color: green;
        font-weight: bold;
        margin-top: 10px;
    }
</style>

<!--<h2>Eliminar Número</h2>-->

<!--<p>¿Estás seguro de que deseas eliminar este Gateway?</p>

<!-- Popup de confirmación -->
<div class="popup">
    <!--<h2>Confirmar Eliminación</h2>-->
    <p>¿Estás seguro de que deseas eliminar este Número?</p>
    <div class="popup-buttons">
        <form method="post">
            <input type="hidden" name="id_chip" value="@Request.Query["id_chip"]" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a class="btn btn-secondary" href="/Gateways">Cancelar</a>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="success-message">@Model.SuccessMessage</div>
}