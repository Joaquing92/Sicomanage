@page
@model SICPERU.Pages.Gateways.CreateModel
@{
}

<br>
<h2>Nuevo Chip</h2>

@if (Model.errorMessage.Length > 0)
{
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<strong>@Model.errorMessage</strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}



<form method="POST">
	<div class ="row mb-3">
		<label class="col-sm-3 col-form-label">Número</label>
		<div class ="col-sm-6">
			<input type="text" class="form-control" name="numero_chip" value="@Model.gatewayinfo.numero_chip">
		</div>
	</div>

	<div class ="row mb-3">
		<label class="col-sm-3 col-form-label">Gateway</label>
		<div class ="col-sm-6">
			<input type="text" class="form-control" name="nombre_gateway" value="@Model.gatewayinfo.nombre_gateway">
		</div>
	</div>

	<div class ="row mb-3">
		<label class="col-sm-3 col-form-label">Ubicación</label>
		<div class ="col-sm-6">
			<input type="text" class="form-control" name="ubicacion_gateway" value="@Model.gatewayinfo.ubicacion_gateway">
		</div>
	</div>

	<div class ="row mb-3">
		<label class="col-sm-3 col-form-label">Fecha de colocación</label>
		<div class ="col-sm-6">
			<input type="text" class="form-control" name="fecha_colocacion" value="@Model.gatewayinfo.fecha_colocacion">
		</div>
	</div>

	<div class ="row mb-3">
		<label class="col-sm-3 col-form-label">Fecha de extracción</label>
		<div class ="col-sm-6">
			<input type="text" class="form-control" name="fecha_extraccion" value="@Model.gatewayinfo.fecha_extraccion">
		</div>
	</div>

	<div class ="row mb-3">
		<label class="col-sm-3 col-form-label">Número nuevo</label>
		<div class ="col-sm-6">
			<input type="text" class="form-control" name="numero_nuevo" value="@Model.gatewayinfo.numero_nuevo">
		</div>
	</div>

	<div class ="row mb-3">
		<label class="col-sm-3 col-form-label">Estado</label>
		<div class ="col-sm-6">
			<input type="text" class="form-control" name="estado" value="@Model.gatewayinfo.estado">
		</div>
	</div>

	@if (Model.successMessage.Length > 0)
	{
		<div class ="row mb-3">
			<div class ="col sm-9">
		
		<div class='alert alert-success alert-dismissible fade show' role ='alert'>
		<strong>@Model.successMessage</strong>
		<button type='button' class ='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
	</div>
	</div>
	</div>
	}

	<div class ="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Agregar</button>
			</div>
		<div class ="col-sm-3 d.grid">
			<a class="btn btn-otuline-primary" href="/Gateways" role="button">Cancelar</a>
	</div>
	</div>

</form>